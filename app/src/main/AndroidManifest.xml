<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lanan.filetransport">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE"/>
    <uses-permission android:name="android.permission.VIBRATE"/>

    <application
        android:icon="@drawable/main_icon"
        android:theme="@style/Theme.AppCompat.NoActionBar"
        android:label="@string/app_name">

        <activity
            android:name="com.lanan.filetransport.main.MainActivity"
            android:launchMode="singleInstance">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.lanan.filetransport.file_transport.ChatActivity"
            android:launchMode="singleInstance">
        </activity>

        <activity
            android:name="com.lanan.filetransport.file_manage.FileManager"
            android:launchMode="singleInstance">
        </activity>

        <service android:name="com.lanan.filetransport.services.NotificationService">
            <intent-filter>
                <action android:name="NotificationService" />
            </intent-filter>
        </service>

    </application>
</manifest>